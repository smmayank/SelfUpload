<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_10_percent_opacity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_upload_dashboard_toolbar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/green_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/self_upload_toolbar_image_margin"
            android:src="@drawable/dashboard_illustration"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="@string/self_upload_help_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <Button
        android:id="@+id/save_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/warm_grey"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_16" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5dp"
        android:layout_above="@+id/save_upload"
        android:indeterminate="false"
        android:max="@integer/max_progress"
        android:minHeight="@dimen/dimen_5dp"
        android:progress="0"
        android:progressDrawable="@drawable/selfupload_progress_drawable" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/progress_bar"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dashboard_cards_margin_top"
        android:background="@color/purple_primary"
        app:cardCornerRadius="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/black_10_percent_opacity"
            android:dividerPadding="@dimen/dimen_1dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dimen_24dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:id="@+id/details_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/property_details"
                            android:textColor="@color/black_87pc"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/details_help_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/details_main_text"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:text="@string/self_upload_dashboard_property_detail_sub_title"
                            android:textColor="@color/black_30_percent_opacity"
                            android:textSize="@dimen/font_size_14" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/details_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/enter"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_10_percent_opacity" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dimen_24dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:id="@+id/commercial_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/self_upload_dashboard_commercials_title"
                            android:textColor="@color/black_87pc"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/commercial_help_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/commercial_main_text"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:text="@string/self_upload_dashboard_commercials_sub_title"
                            android:textColor="@color/black_30_percent_opacity"
                            android:textSize="@dimen/font_size_14" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/commercial_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/enter"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_10_percent_opacity" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:padding="@dimen/dimen_24dp">

                <RelativeLayout
                    android:id="@+id/default_photos_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:id="@+id/photos_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/self_upload_dashboard_photos_title"
                        android:textColor="@color/black_87pc"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/photos_help_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/photos_main_text"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/self_upload_dashboard_photos_sub_title"
                        android:textColor="@color/black_30_percent_opacity"
                        android:textSize="@dimen/font_size_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photos_second_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:id="@+id/photos_main_text_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/self_upload_dashboard_photos_title"
                        android:textColor="@color/black_87pc"
                        android:textSize="@dimen/font_size_16" />

                    <include
                        android:id="@+id/image_stack"
                        layout="@layout/self_upload_dashboard_image_stack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_toEndOf="@+id/photos_main_text_second"
                        android:layout_toRightOf="@+id/photos_main_text_second" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/photos_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/enter"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>