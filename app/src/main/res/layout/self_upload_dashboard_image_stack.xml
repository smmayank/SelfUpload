<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mayank.selfuploadform.selfupload.widgets.CircularImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/gray_cell_background"
        android:visibility="gone" />

    <com.mayank.selfuploadform.selfupload.widgets.CircularImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:background="@color/gray_cell_background"
        android:visibility="gone" />

    <com.mayank.selfuploadform.selfupload.widgets.CircularImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_100dp"
        android:layout_marginStart="@dimen/dimen_100dp"
        android:background="@color/gray_cell_background"
        android:visibility="gone" />

    <com.mayank.selfuploadform.selfupload.widgets.CircularImageView
        android:id="@+id/image4"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_150dp"
        android:layout_marginStart="@dimen/dimen_150dp"
        android:background="@color/gray_cell_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/last_text"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_150dp"
        android:layout_marginStart="@dimen/dimen_150dp"
        android:gravity="center"
        android:textColor="@color/black_87pc"
        android:textSize="@dimen/font_size_20"
        android:visibility="gone" />

</RelativeLayout>